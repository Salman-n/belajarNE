<div class="container mt-5">
  <div class="row">
    <div class="col-md-8">
      <h3>Contact</h3>
      <a href="/contact/add" class="btn btn-primary mb-3">Tambah data</a>
      <% if (msg.length !== 0) { %>
        <div class="alert alert-info" role="alert">
          <%= msg %> 
        </div>
      <% } %> 
      
      <table class="table">
        <thead>
          <tr>
            <th scope="col">No.</th>
            <th scope="col">Nama</th>
            <th scope="col">No Hp</th>
            <th scope="col">Aksi</th>
          </tr>
        </thead>
        <tbody class="table-group-divider">
        <% if (contacts.length === 0) { %>
          <tr>
            <td colspan="4">
              <div class="alert alert-danger" role="alert">
                Data Kontak Kosong...
               </div>
            </td>
          </tr>
          
        <% } %>
          <% contacts.forEach((contact, i)=> { i++ %>
            <tr>
              <th scope="row"><%= i++ %> </th>
              <td><%= contact.nama %></td>
              <td><%= contact.nohp %></td>
              <td>
                <a href="/contact/<%= contact.nama %> " class="badge rounded-pill btn btn-success"><i class="bi bi-info-circle"></i> Detail</a>
              </td>
            </tr> 
          <% }) %>
          
        </tbody>
      </table>
    </div>
  </div>
</div>
    