<div class="container mt-3">
    <div class="row">
        <div class="col-md-8">
            <h2>detail kontak</h2>
            <% if (!contact) { %>
                <div class="alert alert-danger fw-bold" role="alert">
                    Data Kontak Tidak Ada <a href="/contact" class="alert-link fw-normal">&laquo; Back</a>
                  </div>
            <% } else { %>
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                  <h5 class="card-title"><%= contact.nama %> </h5>
                  <p class="card-text"><%= contact.nohp %></p>
                  <p class="card-text"><%= contact.email %></p>
                </div>
                <div class="card-body">
                    <a href="/contact/edit/<%= contact.nama %>" class="badge btn btn-warning">Ubah</a>
                    <br>
                    <a href="/contact/delete/<%= contact.nama %>" class="badge btn btn-danger" onclick="return confirm('yakin?');">hapus</a>
                    <br>
                    <br>
                  <a href="/contact" class="card-link">&laquo Back</a>
                </div>
              </div>
              <% } %> 
        </div>
    </div>
</div>